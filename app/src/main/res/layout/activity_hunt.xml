<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".technical_events.hunt">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/treasurehunt"
            android:elevation="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="DA VINCI CODE" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="An event you'll witness this Encore'19, that will leave you intrigued, the Treasure Hunt - Da Vinci Code is going to be conducted in a never seen before way - on an online platform. As fresh is the idea, so is the event. So wake up the Mel Fisher within you and buckle up for this wacky event. Use your wit, ponder a bit, utilise the clue, who knows the winner will be you!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Coordinators:\n Lekhraj Singh(8354815793)\n Yaduveer singh(9453133322)"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:background="@drawable/customborder"
            android:alpha="0.5"
            android:text="REGISTER"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>