<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="iet.lucknow.encore2019.technical_events.tech">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/techquiz"
                android:elevation="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="TECH QUIZ" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technology is progressing at a breakneck pace these days. Each and every individual whether he is an aspirant or field pioneer should  have the latest updates to be in the race of success. Acquiring the right technical skills is quite possibly the most effective way to achieve this goal. This event aims at enhancing the skills needed to establish your acumen in the field."
                android:textSize="20dp"

/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Coordinators:\n Lekhraj Singh(8354815793)\n Yaduveer singh(9453133322)" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="@drawable/customborder"
                android:alpha="0.5"
                android:text="REGISTER"
                android:textSize="14sp"
                android:textStyle="bold" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>