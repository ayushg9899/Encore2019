                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="@drawable/customborder"
                android:alpha="0.5"
                android:text="REGISTER"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>