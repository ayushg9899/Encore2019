<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#000"

    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="EVENTS"
               android:textSize="30dp"
               android:textColor="#fff"
               android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scrollbars=""
                >


                <LinearLayout
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/Technical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                        <ImageView
                            android:layout_width="200dp"
                            android:id="@+id/Technical1"
                            android:layout_height="175dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/tecni" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/Cultural"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:id="@+id/Cultural1"
                                android:src="@drawable/cult" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/Sports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:id="@+id/Sports1"
                                android:src="@drawable/sports1" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/Arts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:id="@+id/Arts1"
                                android:src="@drawable/arts" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/Informal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:id="@+id/Informal1"
                                android:src="@drawable/informals" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERFORMANCE"
                android:textSize="30dp"
                android:textColor="#fff"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scrollbars=""
            >


        <LinearLayout
            android:id="@+id/perfo_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/Performance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"

                        android:id="@+id/performance"
                        android:src="@drawable/perfo1" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIGHTS"
                android:textSize="30dp"
                android:textColor="#fff"
                android:paddingTop="10dp"
                android:layout_marginHorizontal="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scrollbars="">


                <LinearLayout
                    android:id="@+id/nights_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/stand_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/stand1"
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/standup" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/star_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/star"
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/starnight" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/band_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/band"
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/band2" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAKSHATRA"
                android:textSize="30dp"
                android:textColor="#fff"
                android:paddingTop="10dp"
                android:layout_marginHorizontal="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scrollbars=""
                >

                <LinearLayout
                    android:id="@+id/nakshatra_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/astro_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:id="@+id/astro"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/astroquiz" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/starg_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:id="@+id/starg"
                                android:src="@drawable/stargazing" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>



                    <android.support.v7.widget.CardView
                        android:id="@+id/mobile_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="175dp"
                                android:scaleType="fitXY"
                                android:id="@+id/mobile"
                                android:src="@drawable/mobileplanet" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>